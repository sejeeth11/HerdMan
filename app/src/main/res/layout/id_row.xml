<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#a2d07c"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#a2d07c"
            android:gravity="center|start"
            android:orientation="horizontal">



            <ImageView
                android:layout_width="30dp"
                android:layout_margin="3dp"
                android:layout_height="30dp"
                android:background="@drawable/farmer"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gowri Sankar"
                android:id="@+id/farmervalue"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="3dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="#a2d07c"
            android:gravity="center|start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_margin="3dp"
                android:padding="2dp"
                android:layout_height="30dp"
                android:background="@drawable/phone_call"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9042492015"
                android:id="@+id/mobilevalue"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="3dp"

                />











        </LinearLayout>



    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="11232323232"
        android:id="@+id/id_text"

        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:layout_gravity="center"/>

</LinearLayout>